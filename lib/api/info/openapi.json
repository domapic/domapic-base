{
  "tags": [{
    "name": "info",
    "description": "Domapic service info"
  }],
  "components": {
    "schemas": {
      "Info": {
        "description": "Info about domapic service instance",
        "type": "object",
        "properties": {
          "name": {
            "description": "Name of the service instance",
            "type": "string"
          },
          "type": {
            "description": "Service type",
            "type": "string",
            "enum": ["controller", "plugin", "service"]
          },
          "package": {
            "description": "Package name",
            "type": "string"
          },
          "version": {
            "description": "Package version",
            "type": "string"
          }
        },
        "required": ["name"],
        "additionalProperties": false,
        "example": {
          "name": "foo-instance-name",
          "type": "service",
          "package": "foo-package-name",
          "version": "1.0.0"
        }
      }
    }
  },
  "paths": {
    "/info": {
      "get": {
        "tags": ["info"],
        "summary": "Returns info of the service",
        "description": "Returns a map with info that allows to identify the service",
        "operationId": "getInfo",
        "responses": {
          "200": {
            "description": "Info response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Info"
                }
              }
            }
          }
        }
      }
    }
  }
}
